class = "notify"

.{class} {
  position: fixed;
  bottom: 0;
  right: 8px;
  z-index: 9999;

  &__item {
    margin: 5px 10px;
    border-radius 3px;
    min-width: 250px;
    background-color: #3c8dbc;
    padding: 20px;
    color: white;
    position: relative;

    &--success {
      background-color #00a65a;
    }
    &--failure {
      background-color #dd4b39;
    }
  }

  &__close {
    position: absolute;
    top: 0;
    right: 8px;
    color: white;
    font-size: 1rem;
    cursor: pointer;
    padding: 10px;

    &:before {
      content: 'âœ–';
    }
  }

  &__text-head {
    margin: 8px;
    font-weight bold;
  }

  &__text-body {
    margin: 8px;
  }
}
